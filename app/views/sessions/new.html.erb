<legend>Ingreso de usuario</legend>

<%= form_with(model: @user, local: true) do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Formulario inv√°lido</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>

  <div class="actions"><%= f.submit "Ingresar" %></div>
<% end %>